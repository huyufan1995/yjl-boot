<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.cms.dao.GroupRecordDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.renren.cms.entity.GroupRecordEntity" id="groupRecordMap">
        <result property="id" column="id"/>
        <result property="openId" column="open_id"/>
        <result property="type" column="type"/>
        <result property="createTime" column="_create_time"/>
    </resultMap>
    
    <resultMap type="io.renren.cms.entity.GroupRecordEntity" id="groupUserRecordMap" extends="groupRecordMap">
    	<result property="wxUserEntity.avatarUrl" column="avatarUrl"/>
    	<result property="wxUserEntity.nickName" column="nickName"/>
    	<result property="wxUserEntity.gender" column="gender"/>
    	<result property="wxUserEntity.country" column="country"/>
    	<result property="wxUserEntity.province" column="province"/>
		<result property="wxUserEntity.city" column="city"/>
    	<result property="wxUserEntity.ctime" column="ctime"/>
    	<result property="group_cnt" column="group_cnt"/>
    	
    </resultMap>

	<select id="queryObject" resultType="io.renren.cms.entity.GroupRecordEntity">
		select * from tb_group_record where id = #{value}
	</select>
	<select id="queryObjectByParam" resultType="io.renren.cms.entity.GroupRecordEntity">
		select id,open_id ,
		case when type='group' then '群发'   
			when type='personal' then '转发个人' else '未知' 
			end type,_create_time 
		 from tb_group_record where 1=1
		 <if test="openId != null and openId != ''">
			and open_id=#{openId}
		</if>
		
		<if test="type != null and type != ''">
			 and type=#{type}
		</if>
		order by id desc
	</select>

	<select id="queryList" resultMap="groupUserRecordMap">
		select t1.id,
			 t0.open_id,t0.nick_name nickName,t0.avatar_url avatarUrl,t0.gender,t0.country,
			 t0.province,t0.city,t0.ctime,t1.type, count(t1.open_id) group_cnt
		 from tb_group_record t1
		left join 
		tb_wx_user t0
		 on t1.open_id=t0.open_id 
		where t1.type is not null 
		<if test="openId != null and openId.trim() != ''">
			and t0.open_id=#{openId}
		</if>
		group by t1.open_id,t1.type
		order by t1.open_id,group_cnt desc
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from (
			select  count(t1.open_id) group_cnt
			 from tb_group_record t1
			where t1.type is not null 
			<if test="openId != null and openId.trim() != ''">
				and t0.open_id=#{openId}
			</if>
			group by t1.open_id,t1.type
		) ta
		
		
	</select>
	 
	<insert id="save" parameterType="io.renren.cms.entity.GroupRecordEntity" useGeneratedKeys="true" keyProperty="id">
		insert into tb_group_record
		(
			`open_id`, 
			`type`, 
			`_create_time`
		)
		values
		(
			#{openId}, 
			#{type}, 
			#{createTime}
		)
	</insert>
	 
	<update id="update" parameterType="io.renren.cms.entity.GroupRecordEntity">
		update tb_group_record 
		<set>
			<if test="openId != null">`open_id` = #{openId}, </if>
			<if test="type != null">`type` = #{type}, </if>
			<if test="createTime != null">`_create_time` = #{createTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from tb_group_record where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from tb_group_record where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>