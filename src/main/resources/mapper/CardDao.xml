<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.cms.dao.CardDao">

	<!-- 可根据自己的需求，是否要使用 -->
	<resultMap type="io.renren.cms.entity.CardEntity" id="cardMap">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="portrait" column="portrait" />
		<result property="position" column="position" />
		<result property="company" column="company" />
		<result property="mobile" column="mobile" />
		<result property="ctime" column="ctime" />
		<result property="utime" column="utime" />
		<result property="isDel" column="is_del" />
		<result property="qrcode" column="qrcode" />
		<result property="gender" column="gender" />
		<result property="weixin" column="weixin" />
		<result property="email" column="email" />
		<result property="address" column="address" />
		<result property="introduce" column="introduce" />
		<result property="memberId" column="member_id" />
		<result property="firstLetter" column="first_letter" />
		<result property="openid" column="openid" />
		<result property="addressLongitude" column="address_longitude" />
		<result property="addressLatitude" column="address_latitude" />
	</resultMap>
	
	<select id="queryObjectByOpenid" resultType="io.renren.cms.entity.CardEntity">
		select * from tb_card where openid = #{openid} order by id desc limit 1
	</select>

	<select id="queryObject" resultType="io.renren.cms.entity.CardEntity">
		select * from tb_card where id = #{value}
	</select>

	<select id="queryList" resultType="io.renren.cms.entity.CardEntity">
		select * from tb_card where is_del = 'f'

		<if test="name != null and name != ''"> and `name` = #{name}</if>
		<if test="portrait != null and portrait != ''"> and `portrait` = #{portrait}</if>
		<if test="position != null and position != ''"> and `position` = #{position}</if>
		<if test="company != null and company != ''"> and `company` = #{company}</if>
		<if test="mobile != null and mobile != ''"> and `mobile` = #{mobile}</if>
		<if test="gender != null and gender != ''"> and `gender` = #{gender}</if>
		<if test="weixin != null and weixin != ''"> and `weixin` = #{weixin}</if>
		<if test="email != null and email != ''"> and `email` = #{email}</if>
		<if test="address != null and address != ''"> and `address` = #{address}</if>
		<if test="introduce != null and introduce != ''"> and `introduce` = #{introduce}</if>
		<if test="memberId != null and memberId != ''"> and `member_id` = #{memberId}</if>
		<if test="firstLetter != null and firstLetter != ''"> and `first_letter` = #{firstLetter}</if>
		<if test="openid != null and openid != ''"> and `openid` = #{openid}</if>

		<if test="sdate != null and sdate != '' and edate != null and edate != ''">
			and (ctime between CONCAT(#{sdate},' 00:00:00') and CONCAT(#{edate},' 23:59:59'))
		</if>

		<choose>
			<when test="sidx != null and sidx.trim() != ''">
				order by ${sidx} ${order}
			</when>
			<otherwise>
				order by id desc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

	<select id="queryListVo" resultType="io.renren.api.vo.CardEntityVo">
		SELECT
		tc.*,
		tch.cardtotal
		FROM
		tb_card tc
		LEFT JOIN ( SELECT tc.openid AS oid, count( tc.id ) AS cardtotal FROM tb_card_holder tc GROUP BY tc.openid ) tch ON tc.openid = tch.oid
		 where is_del = 'f'
		<if test="id != null and id != ''"> and tc.`id` = #{id}</if>
		<if test="name != null and name != ''"> and tc.`name` = #{name}</if>
		<if test="portrait != null and portrait != ''"> and tc.`portrait` = #{portrait}</if>
		<if test="position != null and position != ''"> and tc`position` = #{position}</if>
		<if test="company != null and company != ''"> and tc.`company` = #{company}</if>
		<if test="mobile != null and mobile != ''"> and tc.`mobile` = #{mobile}</if>
		<if test="gender != null and gender != ''"> and tc.`gender` = #{gender}</if>
		<if test="weixin != null and weixin != ''"> and tc.`weixin` = #{weixin}</if>
		<if test="email != null and email != ''"> and tc.`email` = #{email}</if>
		<if test="address != null and address != ''"> and tc.`address` = #{address}</if>
		<if test="introduce != null and introduce != ''"> and tc.`introduce` = #{introduce}</if>
		<if test="memberId != null and memberId != ''"> and tc.`member_id` = #{memberId}</if>
		<if test="firstLetter != null and firstLetter != ''"> and tc.`first_letter` = #{firstLetter}</if>
		<if test="openid != null and openid != ''"> and tc.`openid` = #{openid}</if>

		<if test="sdate != null and sdate != '' and edate != null and edate != ''">
			and (ctime between CONCAT(#{sdate},' 00:00:00') and CONCAT(#{edate},' 23:59:59'))
		</if>

		<choose>
			<when test="sidx != null and sidx.trim() != ''">
				order by ${sidx} ${order}
			</when>
			<otherwise>
				order by id desc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>


	<select id="queryTotal" resultType="int">
		select count(id) from tb_card where is_del = 'f'
		<if test="id != null and id != ''"> and `id` = #{id}</if>
		<if test="name != null and name != ''"> and `name` = #{name}</if>
		<if test="portrait != null and portrait != ''"> and `portrait` = #{portrait}</if>
		<if test="position != null and position != ''"> and `position` = #{position}</if>
		<if test="company != null and company != ''"> and `company` = #{company}</if>
		<if test="mobile != null and mobile != ''"> and `mobile` = #{mobile}</if>
		<if test="gender != null and gender != ''"> and `gender` = #{gender}</if>
		<if test="weixin != null and weixin != ''"> and `weixin` = #{weixin}</if>
		<if test="email != null and email != ''"> and `email` = #{email}</if>
		<if test="address != null and address != ''"> and `address` = #{address}</if>
		<if test="introduce != null and introduce != ''"> and `introduce` = #{introduce}</if>
		<if test="memberId != null and memberId != ''"> and `member_id` = #{memberId}</if>
		<if test="firstLetter != null and firstLetter != ''"> and `first_letter` = #{firstLetter}</if>
		<if test="openid != null and openid != ''"> and `openid` = #{openid}</if>

		<if test="sdate != null and sdate != '' and edate != null and edate != ''">
			and (ctime between CONCAT(#{sdate},' 00:00:00') and CONCAT(#{edate},' 23:59:59'))
		</if>
	</select>

	<insert id="save" parameterType="io.renren.cms.entity.CardEntity" useGeneratedKeys="true" keyProperty="id">
		insert into tb_card
		(
		`id`,
		`name`,
		`portrait`,
		`position`,
		`company`,
		`mobile`,
		`ctime`,
		`utime`,
		`is_del`,
		`qrcode`,
		`gender`,
		`weixin`,
		`email`,
		`address`,
		`introduce`,
		`member_id`,
		`first_letter`,
		`address_longitude`,
		`address_latitude`,
		`openid`
		)
		values
		(
		#{id},
		#{name},
		#{portrait},
		#{position},
		#{company},
		#{mobile},
		#{ctime},
		#{utime},
		#{isDel},
		#{qrcode},
		#{gender},
		#{weixin},
		#{email},
		#{address},
		#{introduce},
		#{memberId},
		#{firstLetter},
		#{addressLongitude},
		#{addressLatitude},
		#{openid}
		)
	</insert>

	<update id="update" parameterType="io.renren.cms.entity.CardEntity">
		update tb_card
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="portrait != null">`portrait` = #{portrait}, </if>
			<if test="position != null">`position` = #{position}, </if>
			<if test="company != null">`company` = #{company}, </if>
			<if test="mobile != null">`mobile` = #{mobile}, </if>
			<if test="ctime != null">`ctime` = #{ctime}, </if>
			<if test="utime != null">`utime` = #{utime}, </if>
			<if test="isDel != null">`is_del` = #{isDel}, </if>
			<if test="qrcode != null">`qrcode` = #{qrcode}, </if>
			<if test="gender != null">`gender` = #{gender}, </if>
			<if test="weixin != null">`weixin` = #{weixin}, </if>
			<if test="email != null">`email` = #{email}, </if>
			<if test="address != null">`address` = #{address}, </if>
			<if test="introduce != null">`introduce` = #{introduce}, </if>
			<if test="memberId != null">`member_id` = #{memberId}, </if>
			<if test="firstLetter != null">`first_letter` = #{firstLetter}, </if>
			<if test="addressLongitude != null">`address_longitude` = #{addressLongitude}, </if>
			<if test="addressLatitude != null">`address_latitude` = #{addressLatitude}, </if>
			<if test="openid != null">`openid` = #{openid}</if>
		</set>
		where id = #{id}
	</update>

	<!-- 物理删除 -->
	<delete id="delete">
		delete from tb_card where id = #{value}
	</delete>

	<!-- 批量物理删除 -->
	<delete id="deleteBatch">
		delete from tb_card where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

	<!-- 逻辑删除 -->
	<update id="logicDel">
		update tb_card set is_del = 't' where id = #{value}
	</update>

	<!-- 批量逻辑删除 -->
	<update id="logicDelBatch">
		update tb_card
		set is_del = 't'
		where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</update>

</mapper>