<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.cms.dao.SubscibeDao">


	<!-- 可根据自己的需求，是否要使用 -->
	<resultMap type="io.renren.cms.entity.SubscibeEntity" id="subscibeMap">
		<result property="id" column="id" />
		<result property="ctime" column="ctime" />
		<result property="openid" column="openid" />
		<result property="formid" column="formid" />
		<result property="platform" column="platform" />
	</resultMap>
	
	<delete id="deleteByFormid">
		delete from tb_subscibe where formid = #{formid}
	</delete>
	
	<select id="queryListByPlatformGroup" resultType="io.renren.cms.entity.SubscibeEntity">
		SELECT
			*
		FROM
			tb_subscibe
		WHERE
			platform = #{platform}
		GROUP BY
			openid
	</select>

	<!-- 已经订阅未发送消息 -->
	<select id="queryListByStatus" resultType="io.renren.cms.entity.SubscibeEntity">
		select * from tb_subscibe order by id desc
	</select>

	<select id="queryObjectByOpenid" resultType="io.renren.cms.entity.SubscibeEntity">
		select * from tb_subscibe where openid = #{openid} order by id desc limit 1
	</select>

	<select id="queryObject" resultType="io.renren.cms.entity.SubscibeEntity">
		select * from tb_subscibe where id = #{value}
	</select>

	<select id="queryList" resultType="io.renren.cms.entity.SubscibeEntity">
		select * from tb_subscibe where 1 = 1
		<if test="openid != null and openid != ''"> and `openid` = #{openid}</if>
		<if test="formid != null and formid != ''"> and `formid` = #{formid}</if>
		<if test="sdate != null and sdate != '' and edate != null and edate != ''">
			and (ctime between CONCAT(#{sdate},' 00:00:00') and CONCAT(#{edate},' 23:59:59'))
		</if>

		<choose>
			<when test="sidx != null and sidx.trim() != ''">
				order by ${sidx} ${order}
			</when>
			<otherwise>
				order by id desc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

	<select id="queryTotal" resultType="int">
		select count(id) from tb_subscibe where 1 = 1
		<if test="openid != null and openid != ''"> and `openid` = #{openid}</if>
		<if test="formid != null and formid != ''"> and `formid` = #{formid}</if>
		<if test="sdate != null and sdate != '' and edate != null and edate != ''">
			and (ctime between CONCAT(#{sdate},' 00:00:00') and CONCAT(#{edate},' 23:59:59'))
		</if>
	</select>

	<insert id="save" parameterType="io.renren.cms.entity.SubscibeEntity" useGeneratedKeys="true" keyProperty="id">
		insert into tb_subscibe
		(
		`ctime`,
		`openid`,
		`platform`,
		`formid`
		)
		values
		(
		#{ctime},
		#{openid},
		#{platform},
		#{formid}
		)
	</insert>

	<update id="update" parameterType="io.renren.cms.entity.SubscibeEntity">
		update tb_subscibe
		<set>
			<if test="ctime != null">`ctime` = #{ctime}, </if>
			<if test="openid != null">`openid` = #{openid}, </if>
			<if test="platform != null">`platform` = #{platform}, </if>
			<if test="formid != null">`formid` = #{formid}</if>
		</set>
		where id = #{id}
	</update>

	<!-- 物理删除 -->
	<delete id="delete">
		delete from tb_subscibe where id = #{value}
	</delete>

	<!-- 批量物理删除 -->
	<delete id="deleteBatch">
		delete from tb_subscibe where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>