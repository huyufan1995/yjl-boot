<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.cms.dao.GifTemplateDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.renren.cms.entity.GifTemplateEntity" id="gifTemplateMap">
        <result property="id" column="id"/>
        <result property="ctime" column="ctime"/>
        <result property="utime" column="utime"/>
        <result property="isDel" column="is_del"/>
        <result property="name" column="name"/>
        <result property="cover" column="cover"/>
        <result property="isRelease" column="is_release"/>
        <result property="useCnt" column="use_cnt"/>
        <result property="examplePath" column="example_path"/>
        <result property="videoPath" column="video_path"/>
        <result property="assPath" column="ass_path"/>
        <result property="sentences" column="sentences"/>
        <result property="width" column="width"/>
        <result property="height" column="height"/>
    </resultMap>

	<select id="queryObject" resultType="io.renren.cms.entity.GifTemplateEntity">
		select * from tb_gif_template where id = #{value}
	</select>

	<select id="queryList" resultType="io.renren.cms.entity.GifTemplateEntity">
		select * from tb_gif_template where is_del = 'f'
		<if test="isRelease != null and isRelease != ''"> and `is_release` = #{isRelease}</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by utime desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from tb_gif_template where is_del = 'f'
		<if test="isRelease != null and isRelease != ''"> and `is_release` = #{isRelease}</if>
	</select>
	 
	<insert id="save" parameterType="io.renren.cms.entity.GifTemplateEntity" useGeneratedKeys="true" keyProperty="id">
		insert into tb_gif_template
		(
			`ctime`, 
			`utime`, 
			`is_del`, 
			`name`, 
			`cover`, 
			`is_release`, 
			`use_cnt`, 
			`example_path`, 
			`video_path`, 
			`ass_path`, 
			`width`, 
			`height`, 
			`sentences`
		)
		values
		(
			#{ctime}, 
			#{utime}, 
			#{isDel}, 
			#{name}, 
			#{cover}, 
			#{isRelease}, 
			#{useCnt}, 
			#{examplePath}, 
			#{videoPath}, 
			#{assPath}, 
			#{width}, 
			#{height}, 
			#{sentences}
		)
	</insert>
	 
	<update id="update" parameterType="io.renren.cms.entity.GifTemplateEntity">
		update tb_gif_template 
		<set>
			<if test="ctime != null">`ctime` = #{ctime}, </if>
			<if test="utime != null">`utime` = #{utime}, </if>
			<if test="isDel != null">`is_del` = #{isDel}, </if>
			<if test="name != null">`name` = #{name}, </if>
			<if test="cover != null">`cover` = #{cover}, </if>
			<if test="isRelease != null">`is_release` = #{isRelease}, </if>
			<if test="useCnt != null">`use_cnt` = #{useCnt}, </if>
			<if test="examplePath != null">`example_path` = #{examplePath}, </if>
			<if test="videoPath != null">`video_path` = #{videoPath}, </if>
			<if test="assPath != null">`ass_path` = #{assPath}, </if>
			<if test="width != null">`width` = #{width}, </if>
			<if test="height != null">`height` = #{height}, </if>
			<if test="sentences != null">`sentences` = #{sentences}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from tb_gif_template where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from tb_gif_template where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>