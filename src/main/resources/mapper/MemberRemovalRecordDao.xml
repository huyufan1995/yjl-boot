<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.cms.dao.MemberRemovalRecordDao">

	<sql id="base_column">
		memberRemovalRecord.`id`, memberRemovalRecord.`ctime`, memberRemovalRecord.`operation_member`, memberRemovalRecord.`source_member`,
		memberRemovalRecord.`target_member`
	</sql>

	<!-- 可根据自己的需求，是否要使用 -->
	<resultMap type="io.renren.cms.entity.MemberRemovalRecordEntity" id="memberRemovalRecordMap">
		<result property="id" column="id" />
		<result property="ctime" column="ctime" />
		<result property="operationMember" column="operation_member" />
		<result property="sourceMember" column="source_member" />
		<result property="targetMember" column="target_member" />
	</resultMap>
	
	<select id="queryListBySourceMember" resultType="io.renren.cms.entity.MemberRemovalRecordEntity">
		SELECT
			*,
		  (SELECT real_name from tb_member where id = target_member) targetMemberName
		FROM
			tb_member_removal_record
		WHERE source_member = #{sourceMember}
		ORDER BY id desc
	</select>

	<select id="queryObject" resultType="io.renren.cms.entity.MemberRemovalRecordEntity">
		select * from tb_member_removal_record where id = #{value}
	</select>

	<select id="queryList" resultType="io.renren.cms.entity.MemberRemovalRecordEntity">
		select * from tb_member_removal_record where 1 = 1

		<if test="operationMember != null and operationMember != ''"> and `operation_member` = #{operationMember}</if>
		<if test="sourceMember != null and sourceMember != ''"> and `source_member` = #{sourceMember}</if>
		<if test="targetMember != null and targetMember != ''"> and `target_member` = #{targetMember}</if>

		<if test="sdate != null and sdate != '' and edate != null and edate != ''">
			and (ctime between CONCAT(#{sdate},' 00:00:00') and CONCAT(#{edate},' 23:59:59'))
		</if>

		<choose>
			<when test="sidx != null and sidx.trim() != ''">
				order by ${sidx} ${order}
			</when>
			<otherwise>
				order by id desc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

	<select id="queryTotal" resultType="int">
		select count(id) from tb_member_removal_record where 1 = 1
		<if test="operationMember != null and operationMember != ''"> and `operation_member` = #{operationMember}</if>
		<if test="sourceMember != null and sourceMember != ''"> and `source_member` = #{sourceMember}</if>
		<if test="targetMember != null and targetMember != ''"> and `target_member` = #{targetMember}</if>

		<if test="sdate != null and sdate != '' and edate != null and edate != ''">
			and (ctime between CONCAT(#{sdate},' 00:00:00') and CONCAT(#{edate},' 23:59:59'))
		</if>
	</select>

	<insert id="save" parameterType="io.renren.cms.entity.MemberRemovalRecordEntity">
		insert into tb_member_removal_record
		(
		`id`,
		`ctime`,
		`operation_member`,
		`source_member`,
		`target_member`
		)
		values
		(
		#{id},
		#{ctime},
		#{operationMember},
		#{sourceMember},
		#{targetMember}
		)
	</insert>

	<update id="update" parameterType="io.renren.cms.entity.MemberRemovalRecordEntity">
		update tb_member_removal_record
		<set>
			<if test="ctime != null">`ctime` = #{ctime}, </if>
			<if test="operationMember != null">`operation_member` = #{operationMember}, </if>
			<if test="sourceMember != null">`source_member` = #{sourceMember}, </if>
			<if test="targetMember != null">`target_member` = #{targetMember}</if>
		</set>
		where id = #{id}
	</update>

	<!-- 物理删除 -->
	<delete id="delete">
		delete from tb_member_removal_record where id = #{value}
	</delete>

	<!-- 批量物理删除 -->
	<delete id="deleteBatch">
		delete from tb_member_removal_record where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

	<!-- 逻辑删除 -->
	<update id="logicDel">
		update tb_member_removal_record set is_del = 't' where id = #{value}
	</update>

	<!-- 批量逻辑删除 -->
	<update id="logicDelBatch">
		update tb_member_removal_record
		set is_del = 't'
		where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</update>

</mapper>