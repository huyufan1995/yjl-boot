<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.cms.dao.TemplateApplyDao">

	<sql id="base_column">
		templateApply.`id`, templateApply.`ctime`, templateApply.`utime`, templateApply.`is_del`, templateApply.`is_release`, templateApply.`init_use_cnt`,
		templateApply.`use_cnt`,
		templateApply.`example_path`, templateApply.`layout`
	</sql>

	<!-- 可根据自己的需求，是否要使用 -->
	<resultMap type="io.renren.cms.entity.TemplateApplyEntity" id="templateApplyMap">
		<result property="id" column="id" />
		<result property="ctime" column="ctime" />
		<result property="utime" column="utime" />
		<result property="isDel" column="is_del" />
		<result property="isRelease" column="is_release" />
		<result property="initUseCnt" column="init_use_cnt" />
		<result property="useCnt" column="use_cnt" />
		<result property="examplePath" column="example_path" />
		<result property="layout" column="layout" />
	</resultMap>

	<select id="queryObject" resultType="io.renren.cms.entity.TemplateApplyEntity">
		select * from tb_template_apply where id = #{value}
	</select>

	<select id="queryList" resultType="io.renren.cms.entity.TemplateApplyEntity">
		select * from tb_template_apply where is_del = 'f'
		<if test="id != null and id != ''"> and `id` = #{id}</if>
		<if test="isRelease != null and isRelease != ''"> and `is_release` = #{isRelease}</if>
		<if test="initUseCnt != null and initUseCnt != ''"> and `init_use_cnt` = #{initUseCnt}</if>
		<if test="useCnt != null and useCnt != ''"> and `use_cnt` = #{useCnt}</if>

		<if test="sdate != null and sdate != '' and edate != null and edate != ''">
			and (ctime between CONCAT(#{sdate},' 00:00:00') and CONCAT(#{edate},' 23:59:59'))
		</if>

		<choose>
			<when test="sidx != null and sidx.trim() != ''">
				order by ${sidx} ${order}
			</when>
			<otherwise>
				order by utime desc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

	<select id="queryTotal" resultType="int">
		select count(id) from tb_template_apply where is_del = 'f'
		<if test="id != null and id != ''"> and `id` = #{id}</if>
		<if test="isRelease != null and isRelease != ''"> and `is_release` = #{isRelease}</if>
		<if test="initUseCnt != null and initUseCnt != ''"> and `init_use_cnt` = #{initUseCnt}</if>
		<if test="useCnt != null and useCnt != ''"> and `use_cnt` = #{useCnt}</if>

		<if test="sdate != null and sdate != '' and edate != null and edate != ''">
			and (ctime between CONCAT(#{sdate},' 00:00:00') and CONCAT(#{edate},' 23:59:59'))
		</if>
	</select>

	<insert id="save" parameterType="io.renren.cms.entity.TemplateApplyEntity" useGeneratedKeys="true" keyProperty="id">
		insert into tb_template_apply
		(
		`ctime`,
		`utime`,
		`is_del`,
		`is_release`,
		`init_use_cnt`,
		`use_cnt`,
		`example_path`,
		`layout`
		)
		values
		(
		#{ctime},
		#{utime},
		#{isDel},
		#{isRelease},
		#{initUseCnt},
		#{useCnt},
		#{examplePath},
		#{layout}
		)
	</insert>

	<update id="update" parameterType="io.renren.cms.entity.TemplateApplyEntity">
		update tb_template_apply
		<set>
			<if test="ctime != null">`ctime` = #{ctime}, </if>
			<if test="utime != null">`utime` = #{utime}, </if>
			<if test="isDel != null">`is_del` = #{isDel}, </if>
			<if test="isRelease != null">`is_release` = #{isRelease}, </if>
			<if test="initUseCnt != null">`init_use_cnt` = #{initUseCnt}, </if>
			<if test="useCnt != null">`use_cnt` = #{useCnt}, </if>
			<if test="examplePath != null">`example_path` = #{examplePath}, </if>
			<if test="layout != null">`layout` = #{layout}</if>
		</set>
		where id = #{id}
	</update>

	<!-- 物理删除 -->
	<delete id="delete">
		delete from tb_template_apply where id = #{value}
	</delete>

	<!-- 批量物理删除 -->
	<delete id="deleteBatch">
		delete from tb_template_apply where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

	<!-- 逻辑删除 -->
	<update id="logicDel">
		update tb_template_apply set is_del = 't' where id = #{value}
	</update>

	<!-- 批量逻辑删除 -->
	<update id="logicDelBatch">
		update tb_template_apply
		set is_del = 't'
		where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</update>

</mapper>