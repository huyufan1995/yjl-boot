<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.cms.dao.LikeDao">

	<sql id="base_column" >
			like.`id`, 			like.`create_people`, 			like.`create_time`, 			like.`information_id`  	</sql>

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.renren.cms.entity.LikeEntity" id="likeMap">
        <result property="id" column="id"/>
        <result property="createPeople" column="create_people"/>
        <result property="createTime" column="create_time"/>
        <result property="informationId" column="information_id"/>
    </resultMap>

	<select id="queryObject" resultType="io.renren.cms.entity.LikeEntity">
		select * from tb_like where id = #{value}
	</select>

	<select id="queryList" resultType="io.renren.cms.entity.LikeEntity">
		select * from tb_like where 1 = 1
		
			<if test="createPeople != null and createPeople != ''"> and `create_people` = #{createPeople}</if>
			<if test="createTime != null and createTime != ''"> and `create_time` = #{createTime}</if>
			<if test="informationId != null and informationId != ''"> and `information_id` = #{informationId}</if>
		
		<if test="sdate != null and sdate != '' and edate != null and edate != ''">
			and (ctime between CONCAT(#{sdate},' 00:00:00') and CONCAT(#{edate},' 23:59:59'))
		</if>
		
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(id) from tb_like where 1 = 1
			<if test="createPeople != null and createPeople != ''"> and `create_people` = #{createPeople}</if>
			<if test="createTime != null and createTime != ''"> and `create_time` = #{createTime}</if>
			<if test="informationId != null and informationId != ''"> and `information_id` = #{informationId}</if>

		<if test="sdate != null and sdate != '' and edate != null and edate != ''">
			and (ctime between CONCAT(#{sdate},' 00:00:00') and CONCAT(#{edate},' 23:59:59'))
		</if>
	</select>
	 
	<insert id="save" parameterType="io.renren.cms.entity.LikeEntity">
		insert into tb_like
		(
			`id`, 
			`create_people`, 
			`create_time`, 
			`information_id`
		)
		values
		(
			#{id}, 
			#{createPeople}, 
			#{createTime}, 
			#{informationId}
		)
	</insert>
	 
	<update id="update" parameterType="io.renren.cms.entity.LikeEntity">
		update tb_like 
		<set>
			<if test="createPeople != null">`create_people` = #{createPeople}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="informationId != null">`information_id` = #{informationId}</if>
		</set>
		where id = #{id}
	</update>
	
	<!-- 	物理删除 -->
	<delete id="delete">
		delete from tb_like where id = #{value}
	</delete>
	
	<!-- 	批量物理删除 -->
	<delete id="deleteBatch">
		delete from tb_like where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	<!-- 	逻辑删除 -->
	<update id="logicDel">
		update tb_like set is_del = 't' where id = #{value}
	</update>
	
	<!-- 	批量逻辑删除 -->
	<update id="logicDelBatch">
		update  tb_like
		set is_del = 't'
		where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</update>

</mapper>