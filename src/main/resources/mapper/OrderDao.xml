<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.cms.dao.OrderDao">


	<!-- 可根据自己的需求，是否要使用 -->
	<resultMap type="io.renren.cms.entity.OrderEntity" id="orderMap">
		<result property="id" column="id" />
		<result property="orderSn" column="order_sn" />
		<result property="memberId" column="member_id" />
		<result property="paymentTime" column="payment_time" />
		<result property="payMoney" column="pay_money" />
		<result property="baiduUserId" column="baidu_user_id" />
		<result property="baiduOrderId" column="baidu_order_id" />
		<result property="platform" column="platform" />
		<result property="status" column="status" />
		<result property="type" column="type" />
		<result property="detail" column="detail" />
		<result property="weixinOpenid" column="weixin_openid" />
		<result property="ctime" column="ctime" />
	</resultMap>
	
	<select id="queryObjectByOrderSn" resultType="io.renren.cms.entity.OrderEntity">
		select * from tb_order where order_sn = #{orderSn} limit 1
	</select>

	<select id="queryObject" resultType="io.renren.cms.entity.OrderEntity">
		select * from tb_order where id = #{value}
	</select>

	<select id="queryList" resultType="io.renren.cms.entity.OrderEntity">
		select * from tb_order where 1 = 1

		<if test="orderSn != null and orderSn != ''"> and `order_sn` = #{orderSn}</if>
		<if test="memberId != null and memberId != ''"> and `member_id` = #{memberId}</if>
		<if test="paymentTime != null and paymentTime != ''"> and `payment_time` = #{paymentTime}</if>
		<if test="payMoney != null and payMoney != ''"> and `pay_money` = #{payMoney}</if>
		<if test="baiduUserId != null and baiduUserId != ''"> and `baidu_user_id` = #{baiduUserId}</if>
		<if test="baiduOrderId != null and baiduOrderId != ''"> and `baidu_order_id` = #{baiduOrderId}</if>
		<if test="platform != null and platform != ''"> and `platform` = #{platform}</if>
		<if test="status != null and status != ''"> and `status` = #{status}</if>

		<if test="sdate != null and sdate != '' and edate != null and edate != ''">
			and (ctime between CONCAT(#{sdate},' 00:00:00') and CONCAT(#{edate},' 23:59:59'))
		</if>

		<choose>
			<when test="sidx != null and sidx.trim() != ''">
				order by ${sidx} ${order}
			</when>
			<otherwise>
				order by id desc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

	<select id="queryTotal" resultType="int">
		select count(o.id) from tb_order o
		left join tb_member tm
		on o.weixin_openid = tm.openid
		 where 1 = 1
		 AND tm.bind_status = 'bind'
		<if test="mobile != null and mobile != ''"> and tm.`mobile` = #{mobile}</if>
		<if test="company != null and company != ''">
			and tm.company like concat('%',#{company},'%')
		</if>
		<if test="orderSn != null and orderSn != ''"> and o.`order_sn` = #{orderSn}</if>
		<if test="memberId != null and memberId != ''"> and o.`member_id` = #{memberId}</if>
		<if test="paymentTime != null and paymentTime != ''"> and o.`payment_time` = #{paymentTime}</if>
		<if test="payMoney != null and payMoney != ''"> and o.`pay_money` = #{payMoney}</if>
		<if test="baiduUserId != null and baiduUserId != ''"> and o.`baidu_user_id` = #{baiduUserId}</if>
		<if test="baiduOrderId != null and baiduOrderId != ''"> and o.`baidu_order_id` = #{baiduOrderId}</if>
		<if test="platform != null and platform != ''"> and o.`platform` = #{platform}</if>
		<if test="status != null and status != ''"> and o.`status` = #{status}</if>

		<if test="sdate != null and sdate != '' and edate != null and edate != ''">
			and (o.ctime between CONCAT(#{sdate},' 00:00:00') and CONCAT(#{edate},' 23:59:59'))
		</if>
	</select>

	<insert id="save" parameterType="io.renren.cms.entity.OrderEntity">
		insert into tb_order
		(
		`id`,
		`order_sn`,
		`member_id`,
		`payment_time`,
		`pay_money`,
		`baidu_user_id`,
		`baidu_order_id`,
		`platform`,
		`type`,
		`detail`,
		`weixin_openid`,
		`ctime`,
		`status`
		)
		values
		(
		#{id},
		#{orderSn},
		#{memberId},
		#{paymentTime},
		#{payMoney},
		#{baiduUserId},
		#{baiduOrderId},
		#{platform},
		#{type},
		#{detail},
		#{weixinOpenid},
		#{ctime},
		#{status}
		)
	</insert>

	<update id="update" parameterType="io.renren.cms.entity.OrderEntity">
		update tb_order
		<set>
			<if test="orderSn != null">`order_sn` = #{orderSn}, </if>
			<if test="memberId != null">`member_id` = #{memberId}, </if>
			<if test="paymentTime != null">`payment_time` = #{paymentTime}, </if>
			<if test="payMoney != null">`pay_money` = #{payMoney}, </if>
			<if test="baiduUserId != null">`baidu_user_id` = #{baiduUserId}, </if>
			<if test="baiduOrderId != null">`baidu_order_id` = #{baiduOrderId}, </if>
			<if test="platform != null">`platform` = #{platform}, </if>
			<if test="type != null">`type` = #{type}, </if>
			<if test="detail != null">`detail` = #{detail}, </if>
			<if test="weixinOpenid != null">`weixin_openid` = #{weixinOpenid}, </if>
			<if test="ctime != null">`ctime` = #{ctime}, </if>
			<if test="status != null">`status` = #{status}</if>
		</set>
		where id = #{id}
	</update>

	<!-- 物理删除 -->
	<delete id="delete">
		delete from tb_order where id = #{value}
	</delete>

	<!-- 批量物理删除 -->
	<delete id="deleteBatch">
		delete from tb_order where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

	<!-- 逻辑删除 -->
	<update id="logicDel">
		update tb_order set is_del = 't' where id = #{value}
	</update>

	<!-- 批量逻辑删除 -->
	<update id="logicDelBatch">
		update tb_order
		set is_del = 't'
		where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</update>

	<select id="queryListVo" resultType="io.renren.api.vo.OrderEntityVo">
		select o.*,tm.company as company,tm.mobile as mobile,tm.nickname as memberName from tb_order o
		 left join tb_member tm
		 on o.weixin_openid = tm.openid
		 where 1 = 1
		and tm.bind_status = 'bind'
		<if test="orderSn != null and orderSn != ''"> and o.`order_sn` = #{orderSn}</if>
		<if test="memberId != null and memberId != ''"> and o.`member_id` = #{memberId}</if>
		<if test="paymentTime != null and paymentTime != ''"> and o.`payment_time` = #{paymentTime}</if>
		<if test="payMoney != null and payMoney != ''"> and o.`pay_money` = #{payMoney}</if>
		<if test="baiduUserId != null and baiduUserId != ''"> and o.`baidu_user_id` = #{baiduUserId}</if>
		<if test="baiduOrderId != null and baiduOrderId != ''"> and o.`baidu_order_id` = #{baiduOrderId}</if>
		<if test="platform != null and platform != ''"> and o.`platform` = #{platform}</if>
		<if test="status != null and status != ''"> and o.`status` = #{status}</if>
		<if test="mobile != null and mobile != ''"> and tm.`mobile` = #{mobile}</if>
		<if test="company != null and company != ''">
			and tm.company like concat('%',#{company},'%')
		 </if>
		<if test="sdate != null and sdate != '' and edate != null and edate != ''">
			and (ctime between CONCAT(#{sdate},' 00:00:00') and CONCAT(#{edate},' 23:59:59'))
		</if>

		<choose>
			<when test="sidx != null and sidx.trim() != ''">
				order by ${sidx} ${order}
			</when>
			<otherwise>
				order by id desc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
</mapper>