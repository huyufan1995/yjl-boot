<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.cms.dao.DaysRecordDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.renren.cms.entity.DaysRecordEntity" id="daysRecordMap">
        <result property="id" column="id"/>
        <result property="openId" column="open_id"/>
        <result property="days" column="days"/>
        <result property="type" column="type"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="ifDeleted" column="if_deleted"/>
    </resultMap>

	<select id="queryObject" resultType="io.renren.cms.entity.DaysRecordEntity">
		select * from tb_days_record where id = #{value}
	</select>

	<select id="queryList" resultType="io.renren.cms.entity.DaysRecordEntity">
		select * from tb_days_record  where 1 = 1
		
		<if test="openid != null and openid != ''">
			and open_id = #{openid}
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc,open_id asc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from tb_days_record 
	</select>
	 
	<insert id="save" parameterType="io.renren.cms.entity.DaysRecordEntity" useGeneratedKeys="true" keyProperty="id">
		insert into tb_days_record
		(
			`open_id`, 
			`days`, 
			`type`, 
			`create_time`, 
			`update_time`, 
			`if_deleted`
		)
		values
		(
			#{openId}, 
			#{days}, 
			#{type}, 
			#{createTime}, 
			#{updateTime}, 
			#{ifDeleted}
		)
	</insert>
	 
	<update id="update" parameterType="io.renren.cms.entity.DaysRecordEntity">
		update tb_days_record 
		<set>
			<if test="openId != null">`open_id` = #{openId}, </if>
			<if test="days != null">`days` = #{days}, </if>
			<if test="type != null">`type` = #{type}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}, </if>
			<if test="ifDeleted != null">`if_deleted` = #{ifDeleted}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from tb_days_record where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from tb_days_record where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>