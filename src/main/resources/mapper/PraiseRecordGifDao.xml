<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.cms.dao.PraiseRecordGifDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.renren.cms.entity.PraiseRecordGifEntity" id="praiseRecordGifMap">
        <result property="id" column="id"/>
        <result property="templateId" column="template_id"/>
        <result property="openId" column="open_id"/>
        <result property="ctime" column="ctime"/>
    </resultMap>
    
    <select id="queryObjectByTemplateIdAndOpenId" resultType="io.renren.cms.entity.PraiseRecordGifEntity">
		select * from tb_praise_record_gif where open_id = #{openId} and template_id = #{templateId}
	</select>

	<select id="queryObject" resultType="io.renren.cms.entity.PraiseRecordGifEntity">
		select * from tb_praise_record_gif where id = #{value}
	</select>

	<select id="queryList" resultType="io.renren.cms.entity.PraiseRecordGifEntity">
		select * from tb_praise_record_gif
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from tb_praise_record_gif 
	</select>
	 
	<insert id="save" parameterType="io.renren.cms.entity.PraiseRecordGifEntity" useGeneratedKeys="true" keyProperty="id">
		insert into tb_praise_record_gif
		(
			`template_id`, 
			`open_id`, 
			`ctime`
		)
		values
		(
			#{templateId}, 
			#{openId}, 
			#{ctime}
		)
	</insert>
	 
	<update id="update" parameterType="io.renren.cms.entity.PraiseRecordGifEntity">
		update tb_praise_record_gif 
		<set>
			<if test="templateId != null">`template_id` = #{templateId}, </if>
			<if test="openId != null">`open_id` = #{openId}, </if>
			<if test="ctime != null">`ctime` = #{ctime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from tb_praise_record_gif where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from tb_praise_record_gif where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>