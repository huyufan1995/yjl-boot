<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.cms.dao.TemplateWebsiteDao">


	<!-- 可根据自己的需求，是否要使用 -->
	<resultMap type="io.renren.cms.entity.TemplateWebsiteEntity" id="templateWebsiteMap">
		<result property="id" column="id" />
		<result property="ctime" column="ctime" />
		<result property="utime" column="utime" />
		<result property="isDel" column="is_del" />
		<result property="isRelease" column="is_release" />
		<result property="initUseCnt" column="init_use_cnt" />
		<result property="useCnt" column="use_cnt" />
		<result property="examplePath" column="example_path" />
		<result property="metadata" column="metadata" />
		<result property="layout" column="layout" />
	</resultMap>

	<select id="queryObject" resultType="io.renren.cms.entity.TemplateWebsiteEntity">
		select * from tb_template_website where id = #{value}
	</select>

	<select id="queryList" resultType="io.renren.cms.entity.TemplateWebsiteEntity">
		SELECT
			id,
			ctime,
			utime,
			is_del,
			is_release,
			init_use_cnt,
			use_cnt,
			example_path
		FROM
			tb_template_website
		WHERE
			is_del = 'f'
		<if test="id != null and id != ''"> and `id` = #{id}</if>
		<if test="isRelease != null and isRelease != ''"> and `is_release` = #{isRelease}</if>
		<if test="sdate != null and sdate != '' and edate != null and edate != ''">
			and (ctime between CONCAT(#{sdate},' 00:00:00') and CONCAT(#{edate},' 23:59:59'))
		</if>

		<choose>
			<when test="sidx != null and sidx.trim() != ''">
				order by ${sidx} ${order}
			</when>
			<otherwise>
				order by id asc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

	<select id="queryTotal" resultType="int">
		select count(id) from tb_template_website where is_del = 'f'
		<if test="id != null and id != ''"> and `id` = #{id}</if>
		<if test="isRelease != null and isRelease != ''"> and `is_release` = #{isRelease}</if>
		<if test="sdate != null and sdate != '' and edate != null and edate != ''">
			and (ctime between CONCAT(#{sdate},' 00:00:00') and CONCAT(#{edate},' 23:59:59'))
		</if>
	</select>

	<insert id="save" parameterType="io.renren.cms.entity.TemplateWebsiteEntity">
		insert into tb_template_website
		(
		`id`,
		`ctime`,
		`utime`,
		`font_color`,
		`is_del`,
		`is_release`,
		`init_use_cnt`,
		`use_cnt`,
		`metadata`,
		`layout`,
		`example_path`
		)
		values
		(
		#{id},
		#{ctime},
		#{utime},
		#{fontColor},
		#{isDel},
		#{isRelease},
		#{initUseCnt},
		#{useCnt},
		#{metadata},
		#{layout},
		#{examplePath}
		)
	</insert>

	<update id="update" parameterType="io.renren.cms.entity.TemplateWebsiteEntity">
		update tb_template_website
		<set>
			<if test="ctime != null">`ctime` = #{ctime}, </if>
			<if test="fontColor != null">`font_color` = #{fontColor}, </if>
			<if test="utime != null">`utime` = #{utime}, </if>
			<if test="isDel != null">`is_del` = #{isDel}, </if>
			<if test="isRelease != null">`is_release` = #{isRelease}, </if>
			<if test="initUseCnt != null">`init_use_cnt` = #{initUseCnt}, </if>
			<if test="useCnt != null">`use_cnt` = #{useCnt}, </if>
			<if test="metadata != null">`metadata` = #{metadata}, </if>
			<if test="layout != null">`layout` = #{layout}, </if>
			<if test="examplePath != null">`example_path` = #{examplePath}</if>
		</set>
		where id = #{id}
	</update>

	<!-- 物理删除 -->
	<delete id="delete">
		delete from tb_template_website where id = #{value}
	</delete>

	<!-- 批量物理删除 -->
	<delete id="deleteBatch">
		delete from tb_template_website where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

	<!-- 逻辑删除 -->
	<update id="logicDel">
		update tb_template_website set is_del = 't' where id = #{value}
	</update>

	<!-- 批量逻辑删除 -->
	<update id="logicDelBatch">
		update tb_template_website
		set is_del = 't'
		where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</update>

</mapper>