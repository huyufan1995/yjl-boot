<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.cms.dao.TagDao">


	<!-- 可根据自己的需求，是否要使用 -->
	<resultMap type="io.renren.cms.entity.TagEntity" id="tagMap">
		<result property="id" column="id" />
		<result property="memberId" column="member_id" />
		<result property="name" column="name" />
		<result property="superiorId" column="superior_id" />
	</resultMap>

	<select id="queryListByClienteleId" resultType="io.renren.cms.entity.TagEntity">
		SELECT * FROM tb_tag where id in(SELECT tag_id from tb_clientele_tag where clientele_id = #{clienteleId})
	</select>
	
	<select id="queryObjectBySuperiorIdAndName" resultType="io.renren.cms.entity.TagEntity">
		select * from tb_tag where superior_id = #{superiorId} and name = #{name} limit 1
	</select>

	<select id="queryObjectByMemberIdAndName" resultType="io.renren.cms.entity.TagEntity">
		select * from tb_tag where member_id = #{memberId} and name = #{name} limit 1
	</select>

	<select id="queryObject" resultType="io.renren.cms.entity.TagEntity">
		select * from tb_tag where id = #{value}
	</select>

	<select id="queryList" resultType="io.renren.cms.entity.TagEntity">
		select * from tb_tag where 1 = 1

		<if test="memberId != null and memberId != ''"> and `member_id` = #{memberId}</if>
		<if test="superiorId != null and superiorId != ''"> and `superior_id` = #{superiorId}</if>
		<if test="name != null and name != ''"> and `name` = #{name}</if>

		<choose>
			<when test="sidx != null and sidx.trim() != ''">
				order by ${sidx} ${order}
			</when>
			<otherwise>
				order by id desc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

	<select id="queryTotal" resultType="int">
		select count(id) from tb_tag where 1 = 1
		<if test="memberId != null and memberId != ''"> and `member_id` = #{memberId}</if>
		<if test="superiorId != null and superiorId != ''"> and `superior_id` = #{superiorId}</if>
		<if test="name != null and name != ''"> and `name` = #{name}</if>
	</select>

	<insert id="save" parameterType="io.renren.cms.entity.TagEntity" useGeneratedKeys="true" keyProperty="id">
		insert into tb_tag
		(
		`id`,
		`member_id`,
		`superior_id`,
		`name`
		)
		values
		(
		#{id},
		#{memberId},
		#{superiorId},
		#{name}
		)
	</insert>

	<update id="update" parameterType="io.renren.cms.entity.TagEntity">
		update tb_tag
		<set>
			<if test="memberId != null">`member_id` = #{memberId}, </if>
			<if test="superiorId != null">`superior_id` = #{superiorId}, </if>
			<if test="name != null">`name` = #{name}</if>
		</set>
		where id = #{id}
	</update>

	<!-- 物理删除 -->
	<delete id="delete">
		delete from tb_tag where id = #{value}
	</delete>

	<!-- 批量物理删除 -->
	<delete id="deleteBatch">
		delete from tb_tag where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

	<!-- 逻辑删除 -->
	<update id="logicDel">
		update tb_tag set is_del = 't' where id = #{value}
	</update>

	<!-- 批量逻辑删除 -->
	<update id="logicDelBatch">
		update tb_tag
		set is_del = 't'
		where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</update>

	<select id="queryListVo" resultType="io.renren.api.vo.TagEntityVo">
		select tt.*,tm.nickname as createName from tb_tag tt
		left join tb_member tm
		on tt.member_id = tm.id
		where 1 = 1

		<if test="memberId != null and memberId != ''"> and `member_id` = #{memberId}</if>
		<if test="superiorId != null and superiorId != ''"> and `superior_id` = #{superiorId}</if>
		<if test="name != null and name != ''"> and `name` = #{name}</if>

		<choose>
			<when test="sidx != null and sidx.trim() != ''">
				order by ${sidx} ${order}
			</when>
			<otherwise>
				order by id desc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

</mapper>