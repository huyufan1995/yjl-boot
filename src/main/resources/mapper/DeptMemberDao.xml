<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.cms.dao.DeptMemberDao">


	<!-- 可根据自己的需求，是否要使用 -->
	<resultMap type="io.renren.cms.entity.DeptMemberEntity" id="deptMemberMap">
		<result property="id" column="id" />
		<result property="deptId" column="dept_id" />
		<result property="memberId" column="member_id" />
		<result property="perm" column="perm" />
		<result property="joinTime" column="join_time" />
		<result property="openid" column="openid" />
	</resultMap>

	<update id="updateByDeptId">
		update tb_dept_member set perm = 'employ' where dept_id = #{value}
	</update>

	<delete id="deleteByMemberId">
		delete from tb_dept_member where member_id = #{value}
	</delete>

	<delete id="deleteByDeptId">
		delete from tb_dept_member where dept_id = #{value}
	</delete>

	<select id="queryObjectByMemberId" resultType="io.renren.cms.entity.DeptMemberEntity">
		select * from tb_dept_member where member_id = #{value} limit 1
	</select>

	<select id="queryObject" resultType="io.renren.cms.entity.DeptMemberEntity">
		select * from tb_dept_member where id = #{value}
	</select>

	<select id="queryList" resultType="io.renren.cms.entity.DeptMemberEntity">
		select * from tb_dept_member where 1 = 1

		<if test="deptId != null and deptId != ''"> and `dept_id` = #{deptId}</if>
		<if test="memberId != null and memberId != ''"> and `member_id` = #{memberId}</if>
		<if test="perm != null and perm != ''"> and `perm` = #{perm}</if>

		<choose>
			<when test="sidx != null and sidx.trim() != ''">
				order by ${sidx} ${order}
			</when>
			<otherwise>
				order by id desc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

	<select id="queryTotal" resultType="int">
		select count(tdm.id) from tb_dept_member tdm
		left join tb_dept td
		on tdm.dept_id = td.id
		left join tb_member tm
		on tdm.member_id = tm.id
		where 1 = 1
		<if test="company != null and company != ''"> and tm.company = #{company}</if>
		<if test="memberName != null and memberName != ''"> and tm.nickname = #{memberName}</if>
		<if test="deptName != null and deptName != ''"> and td.name = #{deptName}</if>
		<if test="deptId != null and deptId != ''"> and tdm.`dept_id` = #{deptId}</if>
		<if test="memberId != null and memberId != ''"> and tdm.`member_id` = #{memberId}</if>
		<if test="perm != null and perm != ''"> and tdm.`perm` = #{perm}</if>
	</select>

	<insert id="save" parameterType="io.renren.cms.entity.DeptMemberEntity" useGeneratedKeys="true" keyProperty="id">
		insert into tb_dept_member
		(
		`dept_id`,
		`member_id`,
		`join_time`,
		`openid`,
		`perm`
		)
		values
		(
		#{deptId},
		#{memberId},
		#{joinTime},
		#{openid},
		#{perm}
		)
	</insert>

	<update id="update" parameterType="io.renren.cms.entity.DeptMemberEntity">
		update tb_dept_member
		<set>
			<if test="deptId != null">`dept_id` = #{deptId}, </if>
			<if test="memberId != null">`member_id` = #{memberId}, </if>
			<if test="joinTime != null">`join_time` = #{joinTime}, </if>
			<if test="openid != null">`openid` = #{openid}, </if>
			<if test="perm != null">`perm` = #{perm}</if>
		</set>
		where id = #{id}
	</update>

	<!-- 物理删除 -->
	<delete id="delete">
		delete from tb_dept_member where id = #{value}
	</delete>

	<!-- 批量物理删除 -->
	<delete id="deleteBatch">
		delete from tb_dept_member where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

	<!-- 逻辑删除 -->
	<update id="logicDel">
		update tb_dept_member set is_del = 't' where id = #{value}
	</update>

	<!-- 批量逻辑删除 -->
	<update id="logicDelBatch">
		update tb_dept_member
		set is_del = 't'
		where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</update>

	<select id="queryListVo" resultType="io.renren.api.vo.DeptMemberEntityVo">
		select tdm.*,td.name as deptName,tm.nickname as memberName,tm.company as company from tb_dept_member tdm
		left join tb_dept td
		on tdm.dept_id = td.id
		left join tb_member tm
		on tdm.member_id = tm.id
		where 1 = 1
		<if test="memberName != null and memberName != ''"> and tm.nickname = #{memberName}</if>
		<if test="deptName != null and deptName != ''"> and td.name = #{deptName}</if>
		<if test="deptId != null and deptId != ''"> and tdm.`dept_id` = #{deptId}</if>
		<if test="memberId != null and memberId != ''"> and tdm.`member_id` = #{memberId}</if>
		<if test="perm != null and perm != ''"> and tdm.`perm` = #{perm}</if>

		<choose>
			<when test="sidx != null and sidx.trim() != ''">
				order by ${sidx} ${order}
			</when>
			<otherwise>
				order by tdm.id desc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

</mapper>