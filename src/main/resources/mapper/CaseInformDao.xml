<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.cms.dao.CaseInformDao">

	<sql id="base_column">
		caseInform.`id`, caseInform.`openid`, caseInform.`type`, caseInform.`ctime`, caseInform.`case_id`
	</sql>

	<!-- 可根据自己的需求，是否要使用 -->
	<resultMap type="io.renren.cms.entity.CaseInformEntity" id="caseInformMap">
		<result property="id" column="id" />
		<result property="openid" column="openid" />
		<result property="type" column="type" />
		<result property="ctime" column="ctime" />
		<result property="caseId" column="case_id" />
	</resultMap>
	
	<select id="queryObjectByOpenidAndCaseId" resultType="io.renren.cms.entity.CaseInformEntity">
		select * from tb_case_inform where openid = #{openid} and case_id = #{caseId} limit 1
	</select>

	<select id="queryObject" resultType="io.renren.cms.entity.CaseInformEntity">
		select * from tb_case_inform where id = #{value}
	</select>

	<select id="queryList" resultType="io.renren.cms.entity.CaseInformEntity">
		select * from tb_case_inform where 1 = 1

		<if test="openid != null and openid != ''"> and `openid` = #{openid}</if>
		<if test="type != null and type != ''"> and `type` = #{type}</if>
		<if test="caseId != null and caseId != ''"> and `case_id` = #{caseId}</if>

		<if test="sdate != null and sdate != '' and edate != null and edate != ''">
			and (ctime between CONCAT(#{sdate},' 00:00:00') and CONCAT(#{edate},' 23:59:59'))
		</if>

		<choose>
			<when test="sidx != null and sidx.trim() != ''">
				order by ${sidx} ${order}
			</when>
			<otherwise>
				order by ctime desc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

	<select id="queryListVo" resultType="io.renren.api.vo.CaseInformEntityVo">
		select tci.*,(SELECT title from tb_case WHERE id = case_id) caseTitle,tm.nickname as informerName
		FROM tb_case_inform tci,tb_member tm
		WHERE 1 = 1
		and tm.openid = tci.openid and tm.bind_status ='bind'
		<if test="openid != null and openid != ''"> and `openid` = #{openid}</if>
		<if test="informerName != null and informerName != ''"> and tm.nickname = #{informerName}</if>
		<if test="type != null and type != ''"> and `type` = #{type}</if>
		<if test="caseId != null and caseId != ''"> and `case_id` = #{caseId}</if>

		<if test="sdate != null and sdate != '' and edate != null and edate != ''">
			and (ctime between CONCAT(#{sdate},' 00:00:00') and CONCAT(#{edate},' 23:59:59'))
		</if>

		<choose>
			<when test="sidx != null and sidx.trim() != ''">
				order by ${sidx} ${order}
			</when>
			<otherwise>
				order by ctime desc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>


	<select id="queryTotal" resultType="int">
		select count(tci.id) from tb_case_inform tci,tb_member tm  where 1 = 1
		and tm.openid = tci.openid and tm.bind_status ='bind'
		<if test="informerName != null and informerName != ''"> and tm.nickname = #{informerName}</if>
		<if test="openid != null and openid != ''"> and tci.`openid` = #{openid}</if>
		<if test="type != null and type != ''"> and tci.`type` = #{type}</if>
		<if test="caseId != null and caseId != ''"> and tci.`case_id` = #{caseId}</if>

		<if test="sdate != null and sdate != '' and edate != null and edate != ''">
			and (tci.ctime between CONCAT(#{sdate},' 00:00:00') and CONCAT(#{edate},' 23:59:59'))
		</if>
	</select>

	<insert id="save" parameterType="io.renren.cms.entity.CaseInformEntity" useGeneratedKeys="true" keyProperty="id">
		insert into tb_case_inform
		(
		`openid`,
		`type`,
		`ctime`,
		`case_id`
		)
		values
		(
		#{openid},
		#{type},
		#{ctime},
		#{caseId}
		)
	</insert>

	<update id="update" parameterType="io.renren.cms.entity.CaseInformEntity">
		update tb_case_inform
		<set>
			<if test="openid != null">`openid` = #{openid}, </if>
			<if test="type != null">`type` = #{type}, </if>
			<if test="ctime != null">`ctime` = #{ctime}, </if>
			<if test="caseId != null">`case_id` = #{caseId}</if>
		</set>
		where id = #{id}
	</update>

	<!-- 物理删除 -->
	<delete id="delete">
		delete from tb_case_inform where id = #{value}
	</delete>

	<!-- 批量物理删除 -->
	<delete id="deleteBatch">
		delete from tb_case_inform where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

	<!-- 逻辑删除 -->
	<update id="logicDel">
		update tb_case_inform set is_del = 't' where id = #{value}
	</update>

	<!-- 批量逻辑删除 -->
	<update id="logicDelBatch">
		update tb_case_inform
		set is_del = 't'
		where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</update>

</mapper>